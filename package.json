{
  "name": "my-react-application-server",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "confidence": "3.x.x",
    "glue": "5.0.0",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "hapi": "17.5.3",
    "hapi-swagger": "^14.2.4",
    "hoek": "5.0.4",
    "inert": "^5.1.0",
    "lout": "^11.1.0",
    "pug": "^2.0.3",
    "vision": "5.4.0"
  },
  "devDependencies": {
    "code": "5.2.0",
    "lab": "16.0.0",
    "nodemon": "1.18.3"
  },
  "scripts": {
    "build": "yarn && cd client && yarn && yarn build",
    "start": "nodemon server.js -e js,pug",
    "test": "lab -c -L -C -l -v --threshold 95 --assert code",
    "test-cover": "lab -c -L --assert code -r html -o ./test/artifacts/coverage.html && open ./test/artifacts/coverage.html"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
